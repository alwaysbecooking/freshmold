default:
	@just --list

replace:
	#!/bin/bash
	set -eu

	cd dummy_project_name
	rg -l "dummy_project_name" | xargs -r sd "dummy_project_name" "{{cookiecutter.project_slug}}"
	rg -l "dummy" | xargs -r sd "dummy" "{{cookiecutter.python_package_name}}"
	mv src/dummy "src/{{cookiecutter.python_package_name}}"

	echo "you might have to fix few replacements manually, eg. Justfile(we do have a AI rule about that)"

diff:
	#!/bin/bash
	set -eu

	git diff --name-only --no-index dummy_project_name/ "./{{cookiecutter.project_slug}}"
